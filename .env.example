# =============================================================================
# MAGIC-LUM LANDING PAGE - VARIABLES DE ENTORNO
# =============================================================================
# Copia este archivo como .env.local y configura los valores reales

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DEL SITIO
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Magic-Lum"

# -----------------------------------------------------------------------------
# FORMULARIOS DE CONTACTO
# -----------------------------------------------------------------------------
# Opción 1: Formspree (Recomendado)
NEXT_PUBLIC_FORMSPREE_ENDPOINT=https://formspree.io/f/YOUR_FORM_ID

# Opción 2: Resend
NEXT_PUBLIC_RESEND_API_KEY=your_resend_api_key_here

# Opción 3: Otro servicio personalizado
NEXT_PUBLIC_FORM_ENDPOINT=https://tu-servicio.com/api/contact

# -----------------------------------------------------------------------------
# ANALYTICS Y TRACKING
# -----------------------------------------------------------------------------
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Facebook Pixel (opcional)
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=123456789012345

# -----------------------------------------------------------------------------
# OPTIMIZACIÓN Y PERFORMANCE
# -----------------------------------------------------------------------------
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Web Vitals Tracking
NEXT_PUBLIC_TRACK_WEB_VITALS=true

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE DESARROLLO
# -----------------------------------------------------------------------------
# Mostrar indicadores de desarrollo
NEXT_PUBLIC_DEV_INDICATORS=true

# Habilitar modo debug
NEXT_PUBLIC_DEBUG_MODE=false

# -----------------------------------------------------------------------------
# INTEGRACIÓN CON CRM (Futuro)
# -----------------------------------------------------------------------------
# HubSpot
HUBSPOT_API_KEY=your_hubspot_api_key

# Salesforce
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE EMAIL
# -----------------------------------------------------------------------------
# Para notificaciones internas
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email de notificaciones
NOTIFICATION_EMAIL=hola@magic-lum.cl

# -----------------------------------------------------------------------------
# SEGURIDAD
# -----------------------------------------------------------------------------
# JWT Secret (si usas autenticación)
JWT_SECRET=your_super_secret_jwt_key_here

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE PRODUCCIÓN
# -----------------------------------------------------------------------------
# Habilitar HTTPS redirect
FORCE_HTTPS=true

# Habilitar compresión
ENABLE_COMPRESSION=true